// задача экзамена 2 реверс последовательности чисел статический массив

#include <stdio.h>

int main() {

    int n = 0;
    int i = 0;
    int arr[10];
    int flag = 1;

    while (n != -1) {

        if (scanf("%d", &n) != 1) {
            printf("n/a");
            flag = 0;
            break;
        }
        if (n != -1) {
            arr[i] = n;
            i++;
        }
    }

    if (flag && arr[0] != 0) {

        for(int j = i - 1; j > 0; j--) {
            printf("%d ", arr[j]);
        }
        printf("%d", arr[0]);
    }
    return 0;
}

// ===============================================================
с динамическим массивом

#include <stdio.h>
#include <stdlib.h>

int main() {

    int n = 0;
    int i = 0;
    int flag = 1;
    int *arr = malloc(sizeof(int) * 1);
    if (arr != NULL) {
        while (n != -1) {

            if (scanf("%d", &n) != 1) {
                printf("n/a");
                flag = 0;
                break;
            }
            if (n != -1) {
                arr = realloc(arr, sizeof(int) * (n +2));
                arr[i] = n;
                i++;
            }
        }

        if (flag && arr[0] != 0) {

            for(int j = i - 1; j > 0; j--) {
                printf("%d ", arr[j]);
            }
            printf("%d", arr[0]);
        }
    }
    free(arr);
    return 0;
}


// ===========================================

// задача экзамена 3 перевод строки в верхний регистр

#include <stdio.h>
#include <stdlib.h>

int main () {

    char *str = NULL;
    size_t i = 0;
    char put;

    while(scanf("%c", &put) != 0 && put != '\n') {
        str = realloc(str, sizeof(char) * (i+1));
        if (str != NULL) {
            str[i] = put;
            i++;
        }

    }
    str[i] = '\0';



    for (size_t j = 0; j < i; j++) {
        if (str[j] == ' ') {
            str[j] = str[j] - 32;
        }
    }


    for (size_t j = 0; j < i; j++) {
        printf("%c", str[j]);
    }
    return 0;
}


