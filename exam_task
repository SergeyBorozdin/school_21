// задача экзамена 1 реверс трехзначного числа

#include <stdio.h>

int main() {

    int n = 0;
    int i = 0;
    int arr[10];
    int flag = 1;

    while (n != -1) {

        if (scanf("%d", &n) != 1) {
            printf("n/a");
            flag = 0;
            break;
        }
        if (n != -1) {
            arr[i] = n;
            i++;
        }
    }

    if (flag && arr[0] != 0) {

        for(int j = i - 1; j > 0; j--) {
            printf("%d ", arr[j]);
        }
        printf("%d", arr[0]);
    }
    return 0;
}

